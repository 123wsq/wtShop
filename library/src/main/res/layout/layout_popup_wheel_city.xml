<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_popup_gray"
        android:orientation="vertical"
        android:padding="@dimen/default_margin_left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_button_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_popup_title"
                android:layout_width="0dp"
                android:layout_height="@dimen/default_button_height"
                android:layout_weight="1"
                android:gravity="center"
                android:text="山东省-青岛市-市北区" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/default_margin_left"
                android:layout_marginRight="@dimen/default_margin_right"
                android:gravity="center"
                android:text="取消"
                android:textSize="@dimen/default_text_size"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/default_margin_left"
            android:layout_marginRight="@dimen/default_margin_right"
            android:orientation="horizontal">

            <com.contrarywind.view.WheelView
                android:id="@+id/wv_province"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.contrarywind.view.WheelView
                android:id="@+id/wv_city"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/default_margin_left"
                android:layout_marginRight="@dimen/default_margin_right"
                android:layout_weight="1" />

            <com.contrarywind.view.WheelView
                android:id="@+id/wv_county"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_button_height"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/default_radius"
        android:background="@drawable/shape_popup_gray"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/cancel_popup_color"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold" />

</LinearLayout>
