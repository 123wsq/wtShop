<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    >
    <include layout="@layout/layout_title_bar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_button_height"
        android:background="@color/color_white"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="省份"
            android:gravity="center"
            android:textSize="@dimen/default_text_size"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="城市"
            android:gravity="center"
            android:textSize="@dimen/default_text_size"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="区县"
            android:gravity="center"
            android:textSize="@dimen/default_text_size"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_line_height"
        android:background="@color/line_color"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recycler_province"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="@dimen/default_line_height"
            android:layout_height="match_parent"
            android:background="@color/line_color"></View>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recycler_city"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="@dimen/default_line_height"
            android:layout_height="match_parent"
            android:background="@color/line_color"></View>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recycler_county"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
