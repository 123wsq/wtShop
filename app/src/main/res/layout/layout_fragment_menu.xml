<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_menu_height"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/rg_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_margin_1"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/default_margin_1"
        android:background="@color/color_white"
        >
        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="主页"
            android:textColor="@drawable/selector_font_color2"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_record"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@drawable/selector_font_color2"
            android:textSize="14sp" />


        <RadioButton
            android:id="@+id/rb_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="购物车"
            android:textColor="@drawable/selector_font_color2"
            android:textSize="14sp" />
        <RadioButton
            android:id="@+id/rb_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/selector_font_color2"
            android:textSize="14sp" />
    </RadioGroup>


</RelativeLayout>
